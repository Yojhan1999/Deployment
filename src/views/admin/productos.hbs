{{> Sidebar}}
<div style="margin-left: 20%">
    <h1>USUARIOS</h1>

    <div class="container">
        <form action="/usuario" method="POST">
            <div class="form-group">
                <label>Nombre: </label>
                <input type="text" name="nombre" class="form-control" />
            </div>
            <div class="form-group">
                <label>Apellido: </label>
                <input type="text" name="apellido" class="form-control" />
            </div>
            <div class="form-group">
                <label>Correo: </label>
                <input type="email" name="email" class="form-control" />
            </div>
            <div class="form-group">
                <label>Contrase√±a: </label>
                <input type="password" name="password" class="form-control" />
            </div>

            <input type="submit" value="Registrar" class="btn btn-primary form-control">
        </form>
    </div>

    {{#each helados}}

    <div class="row">
        <div class="col-md-6">
            <div class="card" style="width: 18rem;">
                <img src="{{ imagen }}" class="card-img-top">
                <div class="card-body">
                    <p class="card-text">{{ descripcion }}</p>
                    <p class="card-text">{{ precio }}</p>
                    <div class="row">
                        <div class="col-md-6">
                            <a href="#" class="btn btn-danger">Eliminar</a>
                        </div>
                        <div class="col-md-6">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal{{ id_producto }}">
                                Modificar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal{{ id_producto }}" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="#" method="post">
                        <div class="form-group">
                            <label>ID: </label>
                            <input name="id" type="text" value="{{ id_producto }}" class="form-control" disabled>
                        </div>
                        <div class="form-group">
                            <label>Nombre: </label>
                            <input name="descripcion" type="text" value="{{ descripcion }}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Apellido: </label>
                            <input name="precio" type="text" value="{{ precio }}" class="form-control">
                        </div>
                        <div class="form-group">
                            <label>Correo: </label>
                            <input name="imagen" type="text" value="{{ imagen }}" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Modificar cambios" class="btn btn-primary form-control">
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {{/each}}
</div>